<% layout("layout/boilerplate") %>
<body>
    <div class="row mt-3 mb-3">
        <h1 class="col-6 offset-3 mb-3">SignUp</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" novalidate class="needs-validation">
                 <div class="mb-3">
     <label for="email" class="form-label">Email</label>   
    <input name="email" placeholder="Enter email" class="form-control" required>
    <div class="invalid-feedback">Enter a valid email</div>
    </div>

     <div class="mb-3">
     <label for="username" class="form-label">Usernme</label>   
    <input name="username" placeholder="Enter username" class="form-control" required>
    <div class="invalid-feedback">Enter a valid username</div>
    </div>

     <div class="mb-3">
     <label for="password" class="form-label">Password</label>   
    <input name="password" placeholder="Enter password" class="form-control" required type="password">
    <div class="invalid-feedback">Enter a valid password</div>
    </div>

    <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>

    </body>